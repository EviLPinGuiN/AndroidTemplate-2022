<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="PurpleText" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PurpleText.Large">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">.4</item>
    </style>

    <style name="PurpleText.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">.2</item>
    </style>

    <style name="PurpleText.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">.1</item>
    </style>

</resources>